# Rust Server RCON Configuration
RCON_HOST=your.server.ip
RCON_PORT=28016
RCON_PASSWORD=your_rcon_password

# RCON Transport (classic or web)
# Use 'web' for WebRCON (rcon.web=1), 'classic' for traditional TCP RCON
RCON_TRANSPORT=web

# WebRCON Security (only applies when RCON_TRANSPORT=web)
# Set to 'true' for wss://, 'false' for ws://
RCON_SECURE=false

# Uptime Monitoring
UPTIME_ENDPOINT=https://your-uptime-service.com/heartbeat

# Monitoring Configuration (Optional - defaults shown)
CHECK_INTERVAL=60
TIMEOUT_MS=5000
ATTEMPTS_PER_CYCLE=3
JITTER_MS=300
CONSECUTIVE_FAILURES_THRESHOLD=2
RCON_COMMAND=status
